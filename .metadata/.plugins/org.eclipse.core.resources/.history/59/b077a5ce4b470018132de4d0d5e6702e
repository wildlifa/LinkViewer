package model;

import java.util.ArrayList;

public class Model {

	int diameter = 0;
	public ArrayList<Cell> cells = new ArrayList<Cell>();
	public ArrayList<Edge> edges = new ArrayList<Edge>();
	public ArrayList<Node> nodes = new ArrayList<Node>();
	
	public Cell initialCell = null;
	public Cell currentCell = null;
	
	public Model(int diameter) {
		
		initialCell = new Cell(this, "0");
		currentCell = initialCell;
		this.diameter = diameter;
		for (int n = 1; n < diameter; n++) {
			System.out.println(n);
			currentCell = rightToLeftGrowth(currentCell);
		}
	}
	
	private Cell rightToLeftGrowth(Cell currentCell) {
		
		Cell newCell = new Cell(this, "1");
		return newCell;
		
	}
}
