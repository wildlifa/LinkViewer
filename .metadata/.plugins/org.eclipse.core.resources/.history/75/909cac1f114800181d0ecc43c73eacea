package gui;

import model.Cell;
import model.DownNode;
import model.NegativeEdge;
import model.PositiveEdge;
import model.UpNode;
import model.VerticalEdge;

public class CellSelection {
	
	public boolean topLeftEdge;
	public boolean bottomRightEdge;
	public boolean leftEdge; 
	public boolean rightEdge;
	public boolean bottomLeftEdge;
	public boolean topRightEdge;
	
	public boolean topRightOuterEdge;
	public boolean bottomLeftOuterEdge;
	public boolean topOuterEdge; 
	public boolean bottomOuterEdge;
	public boolean bottomRightOuterEdge;
	public boolean topLeftOuterEdge;
	
	public boolean rightCell;
	public boolean leftCell;
	public boolean topRightCell;
	public boolean topLeftCell;
	public boolean bottomRightCell;
	public boolean bottomLeftCell;
	
	public boolean topNode;
	public boolean bottomLeftNode;
	public boolean bottomRightNode;
	public boolean bottomNode;
	public boolean topLeftNode;
	public boolean topRightNode;
	
	public CellSelection() {
		
		topLeftEdge = null;
		bottomRightEdge = null;
		leftEdge = null; 
		rightEdge = null;
		bottomLeftEdge = null;
		topRightEdge = null;
		
		topRightOuterEdge = null;
		bottomLeftOuterEdge = null;
		topOuterEdge = null; 
		bottomOuterEdge = null;
		bottomRightOuterEdge = null;
		topLeftOuterEdge = null;
		
		rightCell = null;
		leftCell = null;
		topRightCell = null;
		topLeftCell = null;
		bottomRightCell = null;
		bottomLeftCell = null;
		
		topNode = null;
		bottomLeftNode = null;
		bottomRightNode = null;
		bottomNode = null;
		topLeftNode = null;
		topRightNode = null;
		
	}
}
